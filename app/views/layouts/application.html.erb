<!DOCTYPE html>
<html>
  <head>
    <title>FavoriteGolfCourse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="site-header">
      <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-dark shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal"><a class="navbar-brand" href="/"><%= image_tag 'img/logo.png', :size => '220x60' %></a></h5>
        <dl class="searchbox pt-3 pr-3">
           <%= render 'public/searches/form' %>
        </dl>
        <%= render "layouts/header" %>
      </div>
    </div>
    <main>
      <!--<p class="notice"><#%= notice %></p>-->
      <!--<p class="alert"><%#= alert %></p>-->
      <%= yield %>
    </main>
    <footer>
      <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-dark shadow-sm">
        <div class="row">
          <div class="mx-auto text-center">
            <p class="text-white text-center">@CopyRight: FavoriteGolfCourse.inc</p>
          </div>
        </div>
      </div>
    </footer>
    </div>
  </body>
</html>