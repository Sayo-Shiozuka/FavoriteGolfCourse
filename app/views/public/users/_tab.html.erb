<div class="col-md-12">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="post-tab" data-toggle="tab" href="#post" role="tab" aria-controls="post" aria-selected="true">口コミ</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="like-tab" data-toggle="tab" href="#like" role="tab" aria-controls="like" aria-selected="false">お気に入り</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="follow-tab" data-toggle="tab" href="#follow" role="tab" aria-controls="follow" aria-selected="false">フォロー</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="follower-tab" data-toggle="tab" href="#follower" role="tab" aria-controls="follower" aria-selected="false">フォロワー</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="post" role="tabpanel" aria-labelledby="post-tab">
      <div class="container">
        <div class="row">
          <% posts.each do |post| %>
            <div class="col-md-2 posts-user">
              <%= link_to public_user_path(post.id) do %>
                  <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:"100x100" %>
              <% end %><br>
              <%= post.user.name %>
            </div>
            <div class="col-md-4 mb-3">
              <div class="posts-content">
                <p><%= post.created_at.strftime('%Y/%m/%d %H:%M')  %></p>
                <h4 class="mb-3">
                  評価|<%= post.title %>
                </h4>
                <p><%= post.content %></p>
                <% if post.user == current_user %>
                  <%= link_to edit_public_post_path(post), class:"btn btn-sm btn-success", method: :get do %>
                    レビューを編集
                  <% end %>
                  <%= link_to public_post_path(post.golf_course_id), class:"btn btn-sm btn-danger", method: :delete, data: { confirm: '本当に削除しますか？' } do %>
                    レビューを削除
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="col-md-3">
              <%= link_to public_public_golfcourse_path(post.golf_course.id) do %>
                <%= attachment_image_tag post.golf_course, :image, size: "200x150", fallback: "no_image.jpeg" %>
              <% end %>
            </div>
            <div class="col-md-3">
              <%= post.golf_course.name %><br>
              <%= post.golf_course.prefecture %>
              <%= post.golf_course.city %>
              <%= post.golf_course.building %>
            </div>
          <% end %>
        </div>
        <div class="row">
          <p class="text-center">
            <%= paginate posts %>
          </p>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="like" role="tabpanel" aria-labelledby="like-tab">
      <div class="container">
        <div class="row">
          <% if like_list.present? %>
            <% like_list.each do |golf_course| %>
              <div class="col-md-12">
                <%= link_to public_public_golfcourse_path(golf_course.id) do %>
                  <%= attachment_image_tag golf_course, :image, size: "200x150", fallback: "no_image.jpeg" %>
                <% end %><br>
                <%= golf_course.name %><br>
                <%= golf_course.prefecture %>
                <%= golf_course.city %>
                <%= golf_course.building %>
              </div>
            <% end %>
           <% end %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="follow" role="tabpanel" aria-labelledby="follow-tab">
      <table class="table">
        <tbody>
        <% user.followings.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'100x100' %></td>
            <td><%= user.name %></td>
            <td>@<%= user.name_id %></td>
            <td><%= render "public/follows/follow", user: user %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="follower" role="tabpanel" aria-labelledby="follower-tab">
      <table class="table">
        <tbody>
        <% user.followers.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'100x100' %></td>
            <td><%= user.name %></td>
            <td><%= user.name_id %></td>
            <td><%= render "public/follows/follow", user: user %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>