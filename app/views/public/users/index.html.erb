<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class = "container px-5 px-sm-0">
  <div class="row">
    <div class="mx-auto">
      <h2>ユーザー一覧</h2>
      <table class="table">
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to public_user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'70x70' %>
                <% end %>
              </td>
              <td>
                <%= link_to public_user_path(user.id) do %>
                  <strong><%= user.name %></strong><br>
                <% end %>
                @<%= user.name_id %><br>
                <%= user.introduction %>
              </td>
              <td><%#= "フォロー数: #{user.followings.count}" %></td>
              <td><%#= "フォロワー数: #{user.followers.count}" %></td>
              <% if user_signed_in? %>
              <td>
                <%= render "public/follows/follow", user: user %>
              </td>
              <% end %>
            </tr>

        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>