<div class="form-inline">
<%= form_tag(public_search_path, :method => 'get') do %>
  <%= text_field_tag :search %>
  <%= select_tag :option, options_for_select([["ゴルフ場名", "1"],["ユーザー名", "2"]]), class: "btn btn-light btn-sm" %>
  <%= select_tag :choice, options_for_select([["部分一致", "1"],["完全一致", "2"],["前方一致", "3"],["後方一致", "4"]]), class: "btn btn-secondary btn-sm" %>
  <%# hidden_field_tag 'search[method]', "部分一致" => "partial" %>
  <%= submit_tag '検索', :name => nil, class: "btn btn-success btn-sm" %>
<% end %>
</div>
