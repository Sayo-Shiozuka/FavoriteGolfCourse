<% if @golf_course_or_user == "1" %>
  <div class="col-md-8 offset-md-1">
    <h2>
      <%= @search %>の検索結果
    </h2>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <h2 class="index-title">ゴルフ場一覧</h2>
          <p>(全<%#= @golf_courses.count %>件)</p>
        </div>
      </div>
      <div class="row">
        <% @golf_courses.each do |golf_course| %>
          <div class="col-lg-3">
            <%= link_to public_public_golfcourse_path(golf_course.id) do %>
              <%= attachment_image_tag golf_course, :image, size: "200x150", fallback: "no_image.jpeg" %><br>
            <% end %>
            <%= golf_course.name %><br>
            <%= golf_course.prefecture %>
            <%= golf_course.address %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% elsif @golf_course_or_user == "2" %>
<div class="col-md-8 offset-md-1">
  <h2>
    <%= @search %>の検索結果
  </h2>
  <div class = "container px-5 px-sm-0">
  <div class="row">
    <div class="mx-auto">
      <h2>ユーザー一覧</h2>
      <table class="table">
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to public_user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
            <td>
              <strong><%= user.name %></strong><br>
              @<%= user.name_id %><br>
              <%= user.introduction %>
            </td>
            <td><%#= "フォロー数: #{user.followings.count}" %></td>
            <td><%#= "フォロワー数: #{user.followers.count}" %></td>
            <td>
              <%#= render "relationships/follow", user: user %>
            </td>
            <td><%= link_to "Show", public_user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
<% else %>
<% end %>
