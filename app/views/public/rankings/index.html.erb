<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2 class="index-title">ゴルフ場ランキング</h2>
      <p>(<%#= @golf_course.region %>全<%= @golf_courses.count %>件)</p>
    </div>
  </div>
  <div class="row">
    <% @golf_courses.each.with_index(1) do |golf_course, i| %>
      <div class="col-lg-4">
        <strong>第<%= i %>位</strong><br>
        <%= link_to public_public_golfcourse_path(golf_course.id) do %>
          <%= attachment_image_tag golf_course, :image, size: "200x150", fallback: "no_image.jpeg" %><br>
        <% end %>
        <%= golf_course.name %><br>
        <%= golf_course.prefecture %>
        <%= golf_course.city %>
        <%= golf_course.building %>
      </div>
    <% end %>
  </div>
</div>


