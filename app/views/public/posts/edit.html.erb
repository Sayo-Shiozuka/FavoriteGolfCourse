<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">
  <p></p>
  <div class=p-3>
    <h2 class="mb-3">
      レビュー編集フォーム
    </h2>
    <%= form_with model: @post, url: public_post_path(@post) do |f| %>
      <div class="form-group row">
        <%= f.label :title, 'タイトル', class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
          </div>
      </div>
      <div class="form-group row" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :rate, :value => 'score' %>
      </div>
      <!--評価javascript -->
      <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'post[rate]',
        half: true,
      });
      </script>
      <div class="form-group row">
        <%= f.label :content, '口コミ内容 ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= f.text_area :content, class: "form-control", rows: "8",
            placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。
            まずは投稿してみましょう！投稿してから編集もできますよ！' %>
        </div>
      </div>
      <div class="form-group row justify-content-end">
        <div class="col-md-6 text-right">
          <%= f.submit '投稿する', class:"btn btn-success" %>
        </div>
        <div class="col-md-6">
          <%= link_to "戻る", :back, class:"btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>